<style type="text/css">
    #slide {
        width: 940px;
        height: 330px;
        overflow: hidden;
        padding: 0;
        position: relative;
        z-index: 10;
    }

        #slide ul {
            height: 100%;
            position: absolute;
        }

        #slide li {
            float: left;
            width: 940px;
            height: 100%;
            overflow: hidden;
            position: relative;
            background: rgba(0,0,0,0);
            color: #fff;
        }

            #slide li img {
                width: 60%;
                height: 100%;
            }

        #slide .slide-con {
            position: absolute;
            top: 0;
            right: 0;
            overflow: hidden;
            width: 34%;
            height: 100%;
            background: #08c;
            padding: 0 3%;
        }

            #slide .slide-con h2 {
                font-size: 20px;
                line-height: 25px;
                color: #fff;
                padding: 40px 0 15px 0;
                border-bottom: 1px solid #ccc;
                margin-bottom: 20px;
            }

                #slide .slide-con h2 a {
                    color: #fff;
                }

            #slide .slide-con p {
                font-size: 14px;
            }

        #slide .detail {
            margin-top: 10px;
            padding: 5px 0;
            display: block;
            float: left;
            color: #fff;
        }

        #slide .btnBg {
            position: absolute;
            width: 100%;
            left: 0;
            bottom: 0;
            background: #000;
        }

        #slide .btn {
            display: none;
            position: absolute;
            width: 100%;
            background: #000;
            text-align: center;
            opacity: .5;
            filter: alpha(opacity=50);
            right: 0;
            bottom: 0;
        }

            #slide .btn span {
                display: inline-block;
                _display: inline;
                _zoom: 1;
                width: 25px;
                height: 10px;
                _font-size: 0;
                margin-left: 5px;
                cursor: pointer;
                background: #fff;
            }

                #slide .btn span.select {
                    background: #0088cc;
                }

        #slide .preNext {
            width: 45px;
            height: 100px;
            position: absolute;
            top: 50%;
            margin-top: -22.5px;
            background: url(data:image/png;base64,) no-repeat 0 0;
            cursor: pointer;
            /* animate */
            -webkit-transition: all 0.5s ease;
            -moz-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
            -ms-transition: all 0.5s ease;
            transition: all 0.5s ease;
        }

        #slide .pre {
            left: -45px;
        }

        #slide .next {
            right: -45px;
            background-position: right top;
        }

        #slide:hover > .pre {
            left: 0;
        }

        #slide:hover > .next {
            right: 0;
        }
</style>
