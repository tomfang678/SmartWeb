@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Main.cshtml";
    Smart.Framework.Model.sd_job job = new Smart.Framework.Model.sd_job();
    if (ViewData["jobDetail"] != null)
    {
        job = ViewData["jobDetail"] as Smart.Framework.Model.sd_job;
    }
}
<div id="av_section_1" class="avia-section main_color avia-section-default avia-no-shadow avia-bg-style-scroll  avia-builder-el-0  el_before_av_section  avia-builder-el-first  container_wrap fullsize">
    <div class="container">
        <main role="main" itemprop="mainContentOfPage" class="template-page content  twelve alpha units">
            <div class="entry-content-wrapper clearfix">
                <section class="av_textblock_section">
                    <div class="avia_textblock " itemprop="text">
                        <h1 style="text-align: center;">职位详细</h1>
                    </div>
                </section>
                <div class="hr hr-short hr-center  avia-builder-el-2  el_after_av_textblock  el_before_av_textblock "><span class="hr-inner"><span class="hr-inner-style"></span></span></div>
            </div>
            <div class="post-entry post-entry-type-page post-entry-3799">
                <table class="table table-hover">
                    <tr><th colspan="3"><p>@job.position</p></th><th><p>发布时间：@job.addtime</p></th></tr>
                    <tr><td><p>招聘人数:</p></td><td>@job.count 人</td><td><p>工作地点:</p></td><td>@job.place</td></tr>
                    <tr><td><p>工资待遇:</p></td><td>@job.deal</td><td><p>有效期:</p></td><td>永久有效</td></tr>
                    <tr><td colspan="4"><span> @Html.Raw(job.content)</span></td></tr>
                </table>
            </div>
            <div class="avia-button-wrap avia-button-center  avia-builder-el-5  el_after_av_hr  avia-builder-el-last "><a href="/Recruitment/SendResume" class="avia-button avia-icon_select-yes avia-color-theme-color avia-size-large avia-position-center "><span class="avia_button_icon" aria-hidden="true" data-av_icon="" data-av_iconfont="entypo-fontello">申请该职位</span></a></div>

        </main>
    </div>
</div>
