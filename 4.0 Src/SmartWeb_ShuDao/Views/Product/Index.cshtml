@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main.cshtml";
    List<Smart.Framework.Model.sd_product> list = new List<Smart.Framework.Model.sd_product>();
    if (ViewData["product"] != null)
    {
        list = ViewData["product"] as List<Smart.Framework.Model.sd_product>;
    }
}
<div id="av_section_1" class="avia-section main_color avia-section-default avia-no-shadow avia-bg-style-scroll  avia-builder-el-0  el_before_av_section  avia-builder-el-first  container_wrap fullsize">
    <div class="container">
        <main role="main" itemprop="mainContentOfPage" class="template-page content  twelve alpha units">
            <div class="post-entry post-entry-type-page post-entry-3799">
                <div class="entry-content-wrapper clearfix">
                    <section class="av_textblock_section">
                        <div class="avia_textblock " itemprop="text">
                            <h1 style="text-align: center;">课程中心</h1>
                        </div>
                    </section>
                    <div class="hr hr-short hr-center  avia-builder-el-2  el_after_av_textblock  el_before_av_textblock "><span class="hr-inner"><span class="hr-inner-style"></span></span></div>
                    <p></p><section class="av_textblock_section">
                        <div class="container">
                            <div class="text-center">
                            </div>
                            <div class="row">
                                @foreach (var item in list)
                                {
                                    <div class="col-sm-6 col-md-4">
                                        <div class="thumbnail">
                                            <a href="/Product/Detail?id=@item.id">
                                                <img src="@item.imgurl" style="width:305px;height:172px" alt="@item.title">
                                            </a>
                                            <div class="caption">
                                                <h4>@item.title</h4>
                                                <p>@item.description</p>
                                                <p><a href="/Product/Detail?id=@item.id" class="btn btn-default" role="button">查看</a></p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </main>
    </div>
</div>
