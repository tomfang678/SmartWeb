@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main.cshtml";
    List<Smart.Framework.Model.sd_download> list = new List<Smart.Framework.Model.sd_download>();
    if (ViewData["downloadlist"] != null)
    {
        list = ViewData["downloadlist"] as List<Smart.Framework.Model.sd_download>;
    }
}

<div id="av_section_1" class="avia-section main_color avia-section-default avia-no-shadow avia-bg-style-scroll  avia-builder-el-0  el_before_av_section  avia-builder-el-first  container_wrap fullsize">
    <div class="container">
        <main role="main" itemprop="mainContentOfPage" class="template-page content  twelve alpha units">
            <div class="post-entry post-entry-type-page post-entry-3799">
                <div class="entry-content-wrapper clearfix">
                    <section class="av_textblock_section" >
                        <div class="avia_textblock " itemprop="text">
                            <h1 style="text-align: center;">资料中心</h1>
                        </div>
                    </section>
                    <div class="hr hr-short hr-center  avia-builder-el-2  el_after_av_textblock  el_before_av_textblock "><span class="hr-inner">
                        <span class="hr-inner-style"></span></span></div>
                   <!--/.categories-->
                    <div class="widget archieve">
                        <div class="row">
                            <div class="col-sm-12">
                                <ul class="blog_archieve" style="list-style:none">
                                    @foreach (var item in list)
                                    {
                                        <li>
                                            <a href="@item.downloadurl"><i class="fa fa-angle-double-right"></i>@item.title<span class="pull-right">&nbsp; @item.addtime&nbsp;&nbsp;(@item.hits)</span></a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div><!--/.archieve-->
                </div>
            </div>
        </main>
    </div>
</div>